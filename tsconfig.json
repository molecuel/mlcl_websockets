{
  "compileOnSave": false,
  "sortOutput": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "files": [
    "./src/index.ts",
    "./tasks/gulpclass.ts",
    "./typings/del/del.d.ts",
    "./typings/glob/glob.d.ts",
    "./typings/gulp-plumber/gulp-plumber.d.ts",
    "./typings/gulp-tslint/gulp-tslint.d.ts",
    "./typings/gulp-typescript/gulp-typescript.d.ts",
    "./typings/gulp/gulp.d.ts",
    "./typings/merge2/merge2.d.ts",
    "./typings/minimatch/minimatch.d.ts",
    "./typings/node/node.d.ts",
    "./typings/orchestrator/orchestrator.d.ts",
    "./typings/q/Q.d.ts",
    "./typings/vinyl/vinyl.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false,
    "formatOnSave": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\r\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "placeOpenBraceOnNewLineForFunctions": false,
    "placeOpenBraceOnNewLineForControlBlocks": false
  }
}
